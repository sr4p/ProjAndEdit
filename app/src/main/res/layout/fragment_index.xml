<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".index">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="411dp">

        </LinearLayout>

        <!--        <Button-->
<!--            android:id="@+id/addbutton"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/add_but"-->
<!--            app:layout_constraintBottom_toTopOf="@+id/text_frag"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"-->
<!--            app:layout_constraintVertical_bias="0.845"-->
<!--            tools:layout_editor_absoluteX="0dp" />-->

        <TextView
            android:id="@+id/text_frag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMERGENCY LIST"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.082" />

        <TextView
            android:id="@+id/name_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name_timeline"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/text_frag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="204dp"
            android:text="@string/block_one"
            app:layout_constraintEnd_toStartOf="@+id/b2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_frag" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="204dp"
            android:text="@string/block_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/b1"
            app:layout_constraintTop_toBottomOf="@+id/text_frag" />

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/block_three"
            app:layout_constraintEnd_toStartOf="@+id/b4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img3" />

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/block_four"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/b3"
            app:layout_constraintTop_toBottomOf="@+id/img4" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="204dp"
            android:layout_height="150dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/bi1"
            app:layout_constraintBottom_toTopOf="@+id/b1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_frag" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="204dp"
            android:layout_height="150dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/bi2"
            app:layout_constraintBottom_toTopOf="@+id/b2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img1"
            app:layout_constraintTop_toTopOf="@+id/text_frag" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="204dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bi3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b1" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="204dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bi4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
</layout>